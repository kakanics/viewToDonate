platform :ios, '15.0'

# Disable CocoaPods analytics
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Define the project name
project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Function to load Flutter dependencies
def flutter_install_all_ios_pods
  flutter_root = File.expand_path(ENV['FLUTTER_ROOT'])
  load File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')
end

# Start defining the target
target 'Runner' do
  use_frameworks! # Test this without :linkage => :static if issues persist

  flutter_install_all_ios_pods

  # Firebase, Firestore, Ads, and mediation SDKs
  pod 'gRPC-Core'
  pod 'FirebaseCore'
  pod 'FirebaseAnalytics'
  pod 'FirebaseFirestore'
  pod 'Google-Mobile-Ads-SDK'

  # Mediation pods
  pod 'GoogleMobileAdsMediationVungle'
  pod 'GoogleMobileAdsMediationUnity'

  # Optional: explicitly include cloud_firestore
  pod 'cloud_firestore', :path => '../.ios/Pods/cloud_firestore'
end

# Post-install script to modify BoringSSL-GRPC flags
post_install do |installer|
  installer.pods_project.targets.each do |target|
    if target.name == 'BoringSSL-GRPC'
      target.source_build_phase.files.each do |file|
        if file.settings && file.settings['COMPILER_FLAGS']
          flags = file.settings['COMPILER_FLAGS'].split
          flags.reject! { |flag| flag == '-GCC_WARN_INHIBIT_ALL_WARNINGS' }
          file.settings['COMPILER_FLAGS'] = flags.join(' ')
        end
      end
    end
  end
end
